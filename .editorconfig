root = true

[*]
charset = utf-8

# Unix-style newlines
end_of_line = lf

# ensure file ends with a newline when saving
insert_final_newline = true

# remove any whitespace characters preceding newline characters
trim_trailing_whitespace = true

indent_style = space

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.js]
indent_size = 2

[*.ts]
indent_size = 2

[*.tsx]
indent_size = 2

[*.graphql]
indent_size = 2

[*.sql]
indent_size = 4
